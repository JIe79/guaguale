/* 按钮 */
.btn{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  border-radius: 15rpx;
  background-color: #fff;
  font-size: 26rpx;
  box-shadow: 0px 10rpx 20rpx 0px	rgba(0, 0, 0, 0.06);
}

.btn.primary{
  background-color: var(--primary-color);
  border-color: var(--primary-color);
  color: #fff;
}

.btn.plain{
  box-sizing: border-box;
  background-color: transparent;
  color: #333;
  border: 1px solid #333;
}
.btn.plain.primary{
  background-color: #f0faf8;
  border-color: var(--primary-color);
  color: var(--primary-color);
}

.btn.plain.transparent{
  background-color: transparent;
}

/* 按钮组 */
.group-btn{
  display: flex;
}
.group-btn .btn{
  flex: 1;
}
.group-btn .btn+.btn{
  margin-left: 30rpx;
}
.group-btn .btn:first-child{
  margin-left: 0;
}